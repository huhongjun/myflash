<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"  
    layout="vertical"  
    width="100%" height="40"  
    styleName="customPopUp"  
    showCloseButton="true"  
    close="handleClose(event)">   
  
    <mx:Style>   
        .customPopUp {   
            header-height:2;   
            padding-left:5;   
            padding-right:5;   
            padding-top:5;   
            padding-bottom:5;   
            border-color:#FFFFFF;   
            border-alpha:.1;   
            border-thickness-left:5;   
            border-thickness-right:5;   
            border-thickness-bottom:5;   
            border-thickness-top:5;   
            background-color:#FFFFFF;  
            background-alpha:0.1; 
            color:#000000;
            font-size:12;   
        }   
    </mx:Style>  
     
  	<mx:Script>   
        <![CDATA[   
            import mx.managers.PopUpManager;   
            import mx.events.CloseEvent;   
            [Bindable]   
            public var message:String;   
  
            private function handleClose(evt:CloseEvent):void 
            {   
                PopUpManager.removePopUp(this);   
            }   
        ]]>   
    </mx:Script>
    
    <mx:Label width="100%" height="100%" text="{message}"/>   
     
</mx:TitleWindow>  
