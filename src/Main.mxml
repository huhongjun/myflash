	<mx:HBox width="583" height="49" creationComplete="initCtrlPanel()" horizontalAlign="center" verticalAlign="middle" horizontalGap="10" y="525" x="207">
		<mx:Spacer width="10"/>
		<mx:Button id="btnPrevSection"/>
